extends includes/layout

block headlink
  title 编码

block content
  div(class='container')
    div(class='table-responsive')
      table(class='table table-striped table-bordered table-hover')
        thead
          tr
            th 序号
            th 名称
            th 年份
            th 国家
            th 评论数
            th 返回
        tbody
          tr
            td= play[id-1].id
            td= play[id-1].name
            td= play[id-1].year
            td= (play[id-1].country == 1?"美国":"韩国")
            td= play[id-1].comment
            td
              a(role="button", href="/", class="btn btn-primary")
                | 返回
      hr
      table(class='table table-striped table-bordered table-hover')
        thead
          tr
            th 序号
            th 姓名
            th 打分
            th 有用
            th 评论
            th C1
            th C2
            th C3
            th C4
            th C5
            th C6
            th C7
            th C8
            th C9
            th C10
            th C11
            th C12
        tbody
          - for (var i=0;i<comment.length;i++)
            if comment[i].showid == id
              tr
                td
                  a(href="/comment/" + id + "/" + comment[i].commentid)
                    = comment[i].commentid
                td= comment[i].name
                td= comment[i].score
                td= comment[i].usefulness
                td= comment[i].text
                td(class=(comment[i].C1 <= 0 || comment[i].C1 >= 4)?"danger":"")= comment[i].C1
                td(class=(comment[i].C2 <= 0 || comment[i].C2 >= 4)?"danger":"")= comment[i].C2
                td(class=(comment[i].C3 <= 0 || comment[i].C3 >= 4)?"danger":"")= comment[i].C3
                td(class=(comment[i].C4 <= 0 || comment[i].C4 >= 4)?"danger":"")= comment[i].C4
                td(class=(comment[i].C5 <= 0 || comment[i].C5 >= 4)?"danger":"")= comment[i].C5
                td(class=(comment[i].C6 <= 0 || comment[i].C6 >= 4)?"danger":"")= comment[i].C6
                td(class=(comment[i].C7 <= 0 || comment[i].C7 >= 3)?"danger":"")= comment[i].C7
                td(class=(comment[i].C8 <= 0 || comment[i].C8 >= 3)?"danger":"")= comment[i].C8
                td(class=(comment[i].C9 <= 0 || comment[i].C9 >= 3)?"danger":"")= comment[i].C9
                td(class=(comment[i].C10 <= 0 || comment[i].C10 >= 3)?"danger":"")= comment[i].C10
                td(class=(comment[i].C11 <= -1 || comment[i].C11 >= 5)?"danger":"")= comment[i].C11
                td= comment[i].C12

