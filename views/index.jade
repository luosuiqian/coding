extends includes/layout

block headlink
  title 编码

block content
  div(class='container')
    h4 下载方法：右键，链接存储为，再用Excel另存为xlsx格式
    div(class='table-responsive')
      - condition = ["true", "country=0", "country=1", "featurefilm=1", "action=1 or crime=1", "sciencefiction=1 or venture=1", "horror=1 or suspense=1", "comedy=1", "lovestory=1", "family=1", "history=1", "music=1", "homosexual=1"]
      - name = ["All", "American", "korean", "Drama", "ActionCrime", "FantasyAdventure", "HorrorCrux", "Comedy", "Romance", "Family", "History", "Music", "Homosexual"]
      table(class='table table-striped table-bordered table-hover')
        thead
          tr
            th &nbsp;
            th 总表
            th 个表
        tbody
          - for (var i=0;i<condition.length;i++)
            tr
              td= name[i]
              td
                a(href="/general/" + condition[i] + "/" + name[i] + "_general.csv", target="_blank")
                  = name[i] + "_general"
              td
                a(href="/individual/" + condition[i] + "/" + name[i] + "_individual.csv", target="_blank")
                  = name[i] + "_individual"
      hr
      table(class='table table-striped table-bordered table-hover')
        tbody
          tr
            - for (var i=20;i<play.length;i+=20)
              td
                a(href="#p" + i)
                  = i
      hr
      table(class='table table-striped table-bordered table-hover')
        thead
          tr
            th 序号
            th 名称
            th 年份
            th 国家
            th 评论数
            - all = 0
            - a = 0
            - b = 0
            - for (var i=0;i<play.length;i++)
              - all += 1
              if (play[i].finished > 0)
                - a += 1
              if (play[i].finished == 40)
                - b += 1
            th 已完成( #{b} / #{a} / #{all} )
            th 总数
            th 网址
            th 返回
        tbody
          - for (var i=0;i<play.length;i++)
            tr
              td(id="p" + play[i].id, name="p" + play[i].id)= play[i].id
              td(class=play[i].B1B11==1?"info":"")
                a(href="/play/" + play[i].id)
                  = play[i].name
              td(class=play[i].B12==1?"info":"")= play[i].year
              td= (play[i].country == 0?"美国":"韩国")
              td= play[i].comment
              td(class=play[i].finished==play[i].total?"success":(play[i].finished==0?"warning":"danger"))= play[i].finished
              td= play[i].total
              td
                a(href=play[i].url, target='_blank')
                  = play[i].url
              td
                a(href="#top") 回顶部
