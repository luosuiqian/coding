extends includes/layout

block headlink
  title 编码

block content
  div(class='container')
    div(class='table-responsive')
      table(class='table table-striped table-bordered table-hover')
        thead
          tr
            th 序号
            th 名称
            th 年份
            th 国家
            th 评论数
            - all = 0
            - a = 0
            - b = 0
            - for (var i=0;i<play.length;i++)
              - all += 1
              if (play[i].finished > 0)
                - a += 1
              if (play[i].finished == 40)
                - b += 1
            th 已完成( #{b} / #{a} / #{all} )
            th 总数
            th 网址
        tbody
          - for (var i=0;i<play.length;i++)
            tr
              td= play[i].id
              td
                a(href="/play/" + play[i].id)
                  = play[i].name
              td= play[i].year
              td= play[i].country
              td= play[i].comment
              td= play[i].finished
              td= play[i].total
              td
                a(href=play[i].url, target='_blank')
                  = play[i].url
